<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.info.view.detail.InfoDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/info_detail_back_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_info_detail_back"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintEnd_toStartOf="@+id/info_detail_plant_title"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="10dp" />

            <TextView
                android:id="@+id/info_detail_plant_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:gravity="center"
                android:text="PlantName"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/info_detail_back_button"
                app:layout_constraintHorizontal_weight="3"
                tools:layout_editor_absoluteY="10dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/hoya"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/info_detail_plant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="식물 이름" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시작 날짜"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textColor="@color/lightGray"/>

                    <TextView
                        android:id="@+id/info_detail_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="키우기 시작한 날짜" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토양 수분"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textColor="@color/lightGray"/>

                    <TextView
                        android:id="@+id/info_detail_soil_moisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="토양수분" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대기 온도"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textColor="@color/lightGray"/>

                    <TextView
                        android:id="@+id/info_detail_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="온도" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대기 습도"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textColor="@color/lightGray"/>

                    <TextView
                        android:id="@+id/info_detail_humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="습도" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조도"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textColor="@color/lightGray"/>

                    <TextView
                        android:id="@+id/info_detail_illuminance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="조도" />
                </LinearLayout>

            </LinearLayout>





        </LinearLayout>

    </LinearLayout>

</FrameLayout>