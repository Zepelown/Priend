<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:orientation="horizontal"
    android:padding="10sp"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/item_info_plant_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/hoya"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_info_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="식물 이름" />

        <TextView
            android:id="@+id/item_info_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키우기 시작한 날짜" />

        <TextView
            android:id="@+id/item_info_soil_moisture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토양수분" />

        <TextView
            android:id="@+id/item_info_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="온도" />

    </LinearLayout>


</LinearLayout>