<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/infoFragment">

    <fragment
        android:id="@id/infoFragment"
        android:name="com.example.priend.main.info.view.list.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info"
        >
        <action
            android:id="@+id/action_infoFragment_to_infoDetailFragment"
            app:destination="@id/infoDetailFragment" >
            <argument
                android:name="item"
                app:argType="com.example.priend.main.info.view.list.recyclerview.InfoItem"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/infoDetailFragment"
        android:name="com.example.priend.main.info.view.detail.InfoDetailFragment"
        android:label="fragment_info_detail"
        tools:layout="@layout/fragment_info_detail">
        <action
            android:id="@+id/action_infoDetailFragment_to_infoFragment2"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/recordFragment"
        android:name="com.example.priend.main.record.view.RecordFragment"
        android:label="fragment_record"
        tools:layout="@layout/fragment_record"
        />

    <fragment
        android:id="@+id/censorFragment"
        android:name="com.example.priend.main.censor.view.CensorFragment"
        android:label="fragment_censor"
        tools:layout="@layout/fragment_censor"/>


</navigation>